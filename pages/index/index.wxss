.search-container {
  background-color: white;
  width: 100%; 
  box-sizing: border-box;
}

.search {
  position: relative;
  width: 100%; 
  display: flex; 
  align-items: center; 
  box-sizing: border-box;
  padding: 0 26rpx; 
  padding-top: 50rpx;
  background-color: white;
  min-height: 80rpx; 
}

.search-title {
  position: relative; 
  left: 0;
  font-weight: bold;
  font-size: 32rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 120rpx;
  margin-right: 50rpx; 
}

.search input {
  display: block;
  box-sizing: border-box;
  background: #F7F8FA;
  height: 62rpx;
  width: 350rpx;
  border-radius: 20rpx;
  padding-left: 30rpx;
  line-height: 62rpx;
  font-size: 24rpx; 
  border: none; 
  outline: none; 
}

.search-placeholder {
  font-size: 28rpx; /* 14px â†’ 28rpx */
  color: #A9A6A6;
  line-height: 62rpx;
}