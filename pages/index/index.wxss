/* 顶部搜索框 */
.search-container {
  background-color: white;
  width: 100%;
  box-sizing: border-box;
}

.search {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 26rpx;
  padding-top: 50rpx;
  background-color: white;
  min-height: 80rpx;
}

.search-title {
  position: relative;
  left: 0;
  font-weight: bold;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 120rpx;
  margin-right: 50rpx;
}

.search input {
  display: block;
  box-sizing: border-box;
  background: #f7f8fa;
  height: 62rpx;
  width: 350rpx;
  border-radius: 20rpx;
  padding-left: 30rpx;
  line-height: 62rpx;
  font-size: 24rpx;
  border: none;
  outline: none;
}

.search-placeholder {
  font-size: 28rpx; 
  color: #a9a6a6;
  line-height: 62rpx;
}

/* 轮播图 */
.swiper-container {
  position: relative;
}

.swiper-container .swiper1 {
  width: 750rpx;
  height: 375rpx;
}

.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
}

.goodsDynamic {
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  color: #fff;
  font-size: 24rpx;
}

.goodsDynamic .swiper2 {
  width: 100%;
  height: 64rpx;
}

.goodsDynamic-item {
  display: inline-flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 32rpx;
  padding: 8rpx 16rpx;
}

.goodsDynamic-item text {
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 金刚区 */
.category-box {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  margin: 25rpx;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  padding: 20rpx;
  position: inherit;
}

.category-list {
  width: 140rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.category-column {
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}

.category-imgbox {
  width: 100rpx;
  height: 100rpx
}

.category-title {
  font-size: 24rpx;
}

/* 秒杀 */
.notice-box {
  width: 100vw;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #efeff4
}

.notice-box swiper {
  height: 88rpx;
  width: 100%
}

.notice-icon {
  width: 130rpx;
  height: 33rpx;
  margin-right: 10px;
}

/* 限时秒杀 */
.container {
  padding: 0;
  margin: 0;
}

.table-text {
  color: black !important;
  font-size: 16px !important;
  padding:0 28px;
  text-align: center;
}
.table-icon-miaosha {
  width:34rpx;
  height: 42rpx;
  margin-right: 18rpx;
}

.miaosha-container {
  padding: 0;
}

.miaosha-goods-list {
  display: flex;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.miaosha-goods-list image {
  width: 260rpx;
  height: 260rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  margin-right: 32rpx;
}

.miaosha-goods-list .r .goods-title {
  color: #333;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.miaosha-goods-list .r .count-down {
  background: rgba(250, 195, 198, 0.3);
  border-radius: 10rpx;
  font-size: 14rpx;
  font-weight: 400;
  padding: 6rpx 16rpx;
  margin: 15rpx 0 18rpx;
  text-align: center;
}

.van-count-down {
  color: #E14962 !important;
  font-size: 12px !important;
  font-weight: 400;
}

.miaosha-price-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.miaosha-price-btn .msbtn {
  width: 170rpx;
  height: 60rpx;
  background: linear-gradient(156deg, #FF7863 0%, #FF211A 100%);
  border-radius: 34rpx;
  border: none !important;
  line-height: 60rpx !important;
  font-size: 13px !important;
}

.miaosha-price-btn .price {
  color: #e64340;
  font-size: 35rpx;
  margin-top: 8rpx;
}

.miaosha-price-btn .price text {
  color: #666666;
  font-size: 22rpx;
  text-decoration: line-through;
}

/* 爆品 */
.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 0 24rpx;
}

.goods-box {
  width: 339rpx;
  /* height: 472rpx; */
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius: 5px;
  border: 1px solid #D1D1D1;
  padding-bottom: 10rpx;
}

.goods-box .img-box {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}

.goods-box .img-box image {
  width: 339rpx;
  height: 339rpx;
}

.goods-box .goods-title {
  width: 280rpx;
  font-size: 24rpx;
  color: #333;
  margin-left: 24rpx;
}

.goods-box .goods-price-container {
  display: flex;
  align-items: baseline;
}

.goods-box .goods-price {
  overflow: hidden;
  font-size: 34rpx;
  color: #F20C32;
  margin-left: 24rpx;
}

.goods-box .goods-price2 {
  overflow: hidden;
  font-size: 26rpx;
  color: #aaa;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.progress {
  width: 686rpx;
  padding: 0 32rpx;
  margin-bottom: 16rpx;
}

