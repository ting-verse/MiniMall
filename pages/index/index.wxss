.search-container {
  background-color: white;
  width: 100%; 
  box-sizing: border-box;
}

.search {
  position: relative;
  width: 100%; 
  display: flex; 
  align-items: center; 
  box-sizing: border-box;
  padding: 0 26rpx; 
  padding-top: 50rpx;
  background-color: white;
  min-height: 80rpx; 
}

.search-title {
  position: relative; 
  left: 0;
  font-weight: bold;
  font-size: 32rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 120rpx;
  margin-right: 50rpx; 
}

.search input {
  display: block;
  box-sizing: border-box;
  background: #F7F8FA;
  height: 62rpx;
  width: 350rpx;
  border-radius: 20rpx;
  padding-left: 30rpx;
  line-height: 62rpx;
  font-size: 24rpx; 
  border: none; 
  outline: none; 
}

.search-placeholder {
  font-size: 28rpx; /* 14px â†’ 28rpx */
  color: #A9A6A6;
  line-height: 62rpx;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper1 {
  width: 750rpx;
  height: 375rpx;
}

.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
  /* margin: 8rpx 15rpx; */
  /* border-radius: 16rpx; */
}

.goodsDynamic {
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  color: #fff;
  font-size: 24rpx;
}

.goodsDynamic .swiper2 {
  width: 100%;
  height: 64rpx;
}

.goodsDynamic-item {
  display: inline-flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 32rpx;
  padding: 8rpx 16rpx;
}

.goodsDynamic-item text {
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
