/* 顶部搜索框 */
.search-container {
  background-color: white;
  width: 100%;
  box-sizing: border-box;
}

.search {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 26rpx;
  padding-top: 50rpx;
  background-color: white;
  min-height: 80rpx;
}

.search-title {
  position: relative;
  left: 0;
  font-weight: bold;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 120rpx;
  margin-right: 50rpx;
}

.search input {
  display: block;
  box-sizing: border-box;
  background: #f7f8fa;
  height: 62rpx;
  width: 350rpx;
  border-radius: 20rpx;
  padding-left: 30rpx;
  line-height: 62rpx;
  font-size: 24rpx;
  border: none;
  outline: none;
}

.search-placeholder {
  font-size: 28rpx; 
  color: #a9a6a6;
  line-height: 62rpx;
}

/* 轮播图 */
.swiper-container {
  position: relative;
}

.swiper-container .swiper1 {
  width: 750rpx;
  height: 375rpx;
}

.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
}

.goodsDynamic {
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  color: #fff;
  font-size: 24rpx;
}

.goodsDynamic .swiper2 {
  width: 100%;
  height: 64rpx;
}

.goodsDynamic-item {
  display: inline-flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 32rpx;
  padding: 8rpx 16rpx;
}

.goodsDynamic-item text {
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* 金刚区 */
.category-box {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  width: 700rpx;
  margin: 25rpx;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  padding: 20rpx;
  position: inherit;
}

.category-list {
  width: 140rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}

.category-column {
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}

.category-imgbox {
  width: 100rpx;
  height: 100rpx
}

.category-title {
  font-size: 24rpx;
}

/* 秒杀 */
.notice-box {
  width: 100vw;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #efeff4
}

.notice-box swiper {
  height: 88rpx;
  width: 100%
}

.notice-icon {
  width: 130rpx;
  height: 33rpx;
  margin-right: 10px;
}
